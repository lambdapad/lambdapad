<div class="col-md-3">
  <h3 style="margin-top:0"><%= gettext("Recent Posts") %></h3>
  <table class="recent-posts">
  <%= for post <- @posts do %>
    <tr>
      <td style="white-space:nowrap"><%= post[:date] %></td>
      <td><a href="<%= @site_root %><%= @language %>/posts/<%= post[:id] %>"><%= post[:title] %></a></td>
    </tr>
  <% end %>
  </table>
</div>
